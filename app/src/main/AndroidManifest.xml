<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cateringapps">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity"
            android:label="Login"/>
        <activity android:name=".RegisterActivity"
            android:label="Register"/>
        <activity android:name=".FragmentGallery"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="Main Menu"/>
        <activity android:name=".ProfileActivity"
            android:label="Profile"/>
        <activity android:name=".ChangePasswordActivity"
            android:label="Profile"/>
        <activity android:name=".FragmentAboutUs"
            android:label="About Us"/>
        <activity android:name=".OrderActivity"
            android:label="Order Details"/>
        <activity android:name=".UpdateEmail"
            android:label="Update Email"/>
        <activity android:name=".AddPhoneNumber"
            android:label="Add phone number"/>
        <activity android:name=".EditProfile"
            android:label="Change Avatar" />
        <activity android:name=".RatingActivity"
            android:label="Rate Us"/>
    </application>

</manifest>